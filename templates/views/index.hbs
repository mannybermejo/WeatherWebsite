<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/img/weather.png">
    <link rel="stylesheet" href="/css/weather-icons.css">
    <script src="https://code.iconify.design/2/2.0.3/iconify.min.js"></script>
</head>
<body>
    <div class='main-content'>
        <header>
            <h4 class="addressTitle">{{title}}</h4>
            <h1 class="Temp">{{currentTemp}}°</h1>
            <p class="weatherDescription">{{weatherDescription}}</p>
        </header>

    <div class="form">
        <form action="">
            <input class="address" placeholder="Location" type="text">
            <button>Search</button>
        </form>
    </div>

        <div class="weatherInfo">

            <div class="firstRow">
                <div class="">
                <p><span class="iconify" data-icon="wi:thermometer"></span>   FEELS LIKE</p>
                <h3 class="feelsLikes">{{feelsLikes}}°</h3>
            </div>

            <div class="">
                <p><span class="iconify" data-icon="wi:raindrop"></span>   RAINFALL</p>
                <h3 class="rain">{{homeRain}}%</h3>
            </div>
        </div>

        <div class="secondRow">
                <div class="">
                <p><span class="iconify" data-icon="wi:humidity"></span>   HUMIDITY</p>
                <h3 class="humidity">{{homeHumidity}}%</h3>
            </div>
            
            <div class="uv_index">
                <p><span class="iconify" data-icon="wi:day-sunny"></span>   UV INDEX</p>
                <h3 class="uvIndex">{{homeUvIndex}}</h3>
            </div>
        </div>


        <div class="thirdRow">
                <div class="Wind">
                <p><span class="iconify" data-icon="wi:strong-wind"></span>   WIND SPEED</p>
                <h3 class="windInfo">{{homeWindInfo}}</h3>
            </div>
            
            <div class="">
                <p><i class="fas fa-eye"></i>   Visibility</p>
                <h3 class="visible">{{homeV}} mi</h3>
            </div>
        </div>


        </div>

    </div>
       {{>footer}}

    <script src="/js/app.js"></script>
    <script src="/js/all.js"></script>
    
</body>
</html>